@{
    Layout = "~/Views/Shared/_CustDetailsLayout.cshtml";
}
<div class="Section" id="AddOrEditSection">
    <div class="form-container">
        <form>
            <div class="form-row">
                <div class="form-group ">
                    <label for="customerName">Name of Customer:</label>
                    <input type="text" id="customerName" name="customerName" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="emailTo">Email To:</label>
                    <input type="email" id="emailTo" name="emailTo" required>
                </div>
                <div class="form-group">
                    <label for="emailCc">Email CC:</label>
                    <input type="email" id="emailCc" name="emailCc">
                </div>
                <div class="form-group">
                    <label for="emailBcc">Email BCC:</label>
                    <input type="email" id="emailBcc" name="emailBcc">
                </div>
            </div>
            <div class="form-row-centered">
                <div class="dropdown">
                    <div class="dropdown-content">
                        <div class="NetworkList">
                            <div class="network-form-row">
                                <label class="network-item">
                                    <input type="checkbox" name="network" value="KeyFuels" onclick="ShowNetworkAccountNumberInput(this);">
                                    KeyFuels
                                </label>
                                <label class="network-item">
                                    <input type="checkbox" name="network" value="Texaco" onclick="ShowNetworkAccountNumberInput(this);">
                                    Texaco
                                </label>
                                <label class="network-item">
                                    <input type="checkbox" name="network" value="UkFuels" onclick="ShowNetworkAccountNumberInput(this);">
                                    UkFuels
                                </label>
                                <label class="network-item">
                                    <input type="checkbox" name="network" value="FuelGenie" onclick="ShowNetworkAccountNumberInput(this);">
                                    FuelGenie
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row-centered">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<div class="Section" id="CustomerFixSection">
    <p>CustomerFixSection</p>
</div>